<?xml version="1.0" encoding="utf-8"?>
<userConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="user-config.xsd">
	<dualAssConfig>
		<filename>${baseTop}-dual</filename>
		<cleanSubtitles>true</cleanSubtitles>
		<mergeIntoOneLine>false</mergeIntoOneLine>
		<fixPosition>true</fixPosition>
		<adjustTimecodes tolerance="850">false</adjustTimecodes>
		<one>
			<fontConfig>
				<color>#fffff9</color>
				<name>Arial</name>
				<outlineColor>#000000</outlineColor>
				<outlineWidth>2</outlineWidth>
				<size>16</size>
			</fontConfig>
			<styleName>Bottom</styleName>
			<alignment>centered</alignment>
			<alignmentOffset>bottom</alignmentOffset>
		</one>
		<two>
			<fontConfig>
				<color>#fffff9</color>
				<name>Arial</name>
				<outlineColor>#000000</outlineColor>
				<outlineWidth>2</outlineWidth>
				<size>16</size>
			</fontConfig>
			<styleName>Top</styleName>
			<alignment>centered</alignment>
			<alignmentOffset>top</alignmentOffset>
		</two>
	</dualAssConfig>
	<simpleAssConfig>
		<fontConfig>
			<color>#fffff9</color>
			<name>Arial</name>
			<outlineColor>#000000</outlineColor>
			<outlineWidth>2</outlineWidth>
			<size>16</size>
		</fontConfig>
		<styleName>default</styleName>
		<alignment>centered</alignment>
		<alignmentOffset>bottom</alignmentOffset>
	</simpleAssConfig>
</userConfiguration>